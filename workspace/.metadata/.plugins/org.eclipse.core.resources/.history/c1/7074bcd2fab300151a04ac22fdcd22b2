import java.io.File;
import javax.microedition.lcdui.Graphics;
import lejos.nxt.Sound;


public class Vihainen extends Mieliala {
	
	public Vihainen(MielialojenPiirtaja piirtaja, AanenSoittaja soittaja) {
		super(piirtaja, soittaja);
	}

	public void toteutus() {
		Sound.playSample(whine);
		piirtaja.piirraVihainen(graf);
		Thread.sleep(800);
		Sound.playSample(puppy);
		puolinopeudella();
		pakita();
		Thread.sleep(1500);
		pysahdy();
		Thread.sleep(2000); 	//mahdollista nyt sammuttaa painamalla ESCAPE+ENTER!
	}



}
